<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_be"
    android:orientation="vertical"
    tools:context="com.hj.popwindow.activitys.appset.Set_Usual_Function_aty">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_def_title"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:text="@string/set_usual_function"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <et.maimob.com.et.view.MyGridView
        android:id="@+id/usual_function_gridveiw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="#ffffff"
        android:numColumns="4"/>

    <et.maimob.com.et.view.MyGridView
        android:id="@+id/usual_function_select_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:numColumns="4"/>
</RelativeLayout>
